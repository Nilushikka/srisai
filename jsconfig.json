{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@styles/*": [
                "styles/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}